{
  "name": "kpiwidgets",
  "version": "1.0.0",
  "description": "Custom React component for Dash by Plotly. Used to show the KPI value (with or without units) and difference between current and previous value, as well as target value, with difference from it, based on predefined or custom rules. ",
  "main": "index.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/itspxly/dashboards-widgets.git"
  },
  "bugs": {
    "url": "https://github.com/itspxly/dashboards-widgets/issues"
  },
  "homepage": "https://github.com/itspxly/dashboards-widgets",
  "scripts": {
    "build:js::dev": "webpack --mode development",
    "build:js": "webpack",
    "build:backends": "dash-generate-components ./src/ts/components widgets -p package-info.json --r-prefix '' --jl-prefix '' --ignore \\.test\\.",
    "build": "npm run build:js && npm run build:backends",
    "watch": "npm run build:js::dev -- --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.2",
    "@types/react": "^17.0.39",
    "css-loader": "^6.7.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ramda": "^0.28.0",
    "react": "16.13.0",
    "react-docgen": "^5.4.0",
    "react-dom": "16.13.0",
    "sass": "^1.70.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "author": "Andrei Kozik <itspxly@gmail.com>",
  "license": "MPL-2.0",
  "dependencies": {
    "classnames": "^2.5.1"
  }
}
